
<div class="h-screen w-screen flex items-center">
  <div class="container middle-page flex flex-col md:flex-row items-center justify-evenly px-5 text-gray-700">
   	<div class="max-w-md">
      <div class="text-5xl font-dark font-bold mb-14">
        <%= @recipe.title %>
      </div>
      <div
        class="text-xl md:text-xl font-light leading-normal flex flex-row">
       <p>Temps de préparation: <%= @recipe.cook_time%>  mins
       </p> 
      </div>
      <div
        class="text-2xl md:text-xl font-light leading-normal flex flex-row">
          <div class="mt-14 text-center">
            <h2>Informations nutritionnelles :</h2>
          </div>
        </div>
        <ul class="">
          <li><%= @recipe.total_cal%> calories</li>
          <li><%= @recipe.total_prot%> protéines</li>
          <li><%= @recipe.total_carbs%> glucides</li>
          <li><%= @recipe.total_fat%> lipides</li>
        
        <div class="text-2xl md:text-xl font-light leading-normal mt-10">
        <p>Ingrédients :</p>
        <span class="text-sm">
          <%= @recipe.ingredients_list%>
        </span>
      </div>
      <div class="mt-14">
        <%= link_to 'Voir la recette', @recipe.marmiton_url, class:"mt-14 ml-14 px-4 inline py-2 text-sm text-lg text-white rounded-lg  bg-primary-600"%>
         <%= link_to "Retour", request.referer.present? ? request.referer : default_path, class:"text-white bg-warning border border-solid hover:border-warning hover:text-warning hover:bg-white active:bg-primary-600 font-bold uppercase text-xs md:text-sm px-4 py-2 rounded outline-none focus:outline-none mr-1 mb-1"  %>
      </div>
        
    </div>
    
    <div class=" max-w-lg ">
      <%= image_tag @recipe.image_url%>
    </div>        
  </div>
</div>
