<div class="container mx-auto mb-auto">

  <div class="middle-page flex items-center justify-evenly h-full">

    <div class="md:grid md:grid-cols-3 md:gap-6 mx-3 my-3 py-8 bg-gray-100 rounded-2xl shadow-xl">
      <div class="md:col-span-1">
        <h3 class="text-lg ml-3 mt-2 font-medium leading-6 text-gray-900">Tes informations</h3>
        <p class="mt-5 ml-3 text-sm text-gray-500 text-justify">
          Ces informations nous permettront de choisir pour toi les recettes les plus adaptées !
        </p>
        <%= image_tag 'personal_data_' %>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <%= form_with(model: @user, method: "put") do |f| %>
        <div class="grid grid-cols-3 gap-6">
          <div class="col-span-3 sm:col-span-2">
           <div class="radio-buttons">
              <ul class="flex flex-row justify-center">
                <li class="mx-4">
                  <%= radio_button_tag(:gender, "Homme") %>
                  <%= label_tag(:gender, "Je suis un homme") %>
                </li>
                <li class="mx-4">
                  <%= radio_button_tag(:gender, "Femme") %>
                  <%= label_tag(:gender, "Je suis une femme") %>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="input-group js-input-group">
          <div class="input-container ic1">
            <%= f.number_field :age, in: 7..120, placeholder: '', value: nil, required: true, class:"input form-control js-form-control" %>
            <div class="cut cut-short bg-gray-100"></div>
            <label for="age" class="placeholder">Age</>
          </div>
        </div>

        <div class="input-group js-input-group">
          <div class="input-container ic1">
            <%= f.number_field :weight_in_kgs, in: 30..220, placeholder: '', value: nil, required: true, class:"input form-control js-form-control" %>
            <div class="cut cut-large bg-gray-100"></div>
            <label for="weight_in_kgs" class="placeholder">Poids en kg</>
          </div>
        </div>

        <div class="input-group js-input-group">
          <div class="input-container ic1">
            <%= f.number_field :height_in_cms, in: 80..250, placeholder: '', value: nil, required: true, class:"input form-control js-form-control" %>
            <div class="cut cut-large bg-gray-100"></div>
            <label for="height_in_cms" class="placeholder">Taille en cm</>
          </div>
        </div>

        <div class="radio-buttons">
          <ul class="flex flex-row justify-center">
            <li class="mx-5">
              <%= radio_button_tag(:objective, "1") %>
              <%= label_tag(:gender, "Je veux perdre du poids") %>
            </li>
            <li class="mx-5">
              <%= radio_button_tag(:objective, "2") %>
              <%= label_tag(:gender, "Je veux garder la ligne") %>
            </li>
            <li class="mx-5">
              <%= radio_button_tag(:objective, "3") %>
              <%= label_tag(:gender, "Je veux prendre du poids") %>
            </li>
          </ul>
        </div>

        <%= f.select :activity_level, [["Travail sédendaire + pas de sport", "1"],['Sport léger 1 à 3 fois par semaine', "2"], ['Sport modéré 3 à 5 fois par semaine', "3"], ['Activité sportive presque quotidienne', "4"], ['Métier exigeant + sport intense', "5"]], required: true %>

        <%= f.submit "Valider", class:"submit" %>

        <% end %>
      </div>
    </div>

  </div>
</div>