                      <path
                        d="M852.2,601.6c0,26.7-12,51.6-32.9,68.3c-15.6,12.5-34.5,19.1-54.6,19.1c-26.8,0-51.8-12.1-68.6-33.2L680.5,636l-15.7,19.8   c-16.7,21.1-41.7,33.1-68.6,33.1c-26.9,0-51.9-12.1-68.6-33.2L512,636l-15.7,19.8c-16.7,21.1-41.7,33.2-68.6,33.2   c-26.9,0-51.9-12.1-68.6-33.2L343.5,636l-15.7,19.8c-16.7,21.1-41.7,33.2-68.6,33.2c-20.1,0-39-6.6-54.6-19.1   c-20.9-16.7-32.9-41.6-32.9-68.3c0-48.2,39.2-87.5,87.5-87.5c9.2,0,47.9,0,100.1,0.1l78.9,0.1V344.8c0-13.6,11.1-24.7,24.7-24.7   h98.8c13.6,0,24.7,11.1,24.7,24.7v169.5c89.3,0.1,164.8,0.1,178.3,0.1C813,514.4,852.2,553.5,852.2,601.6z" />
                      <path
                        d="M847.2,698.8v216c0,17.6-14.3,31.9-31.9,31.9H209.4c-17.6,0-31.9-14.3-31.9-31.9V699.2c0.7,0.6,1.4,1.2,2.2,1.8   c4.1,3.3,8.4,6.3,12.8,9c20,12.3,43.1,18.9,66.7,18.9c31.5,0,61.2-11.4,84.3-31.8c23.1,20.4,52.8,31.8,84.3,31.8   c31.5,0,61.2-11.4,84.3-31.8c23.1,20.4,52.8,31.8,84.3,31.8s61.2-11.4,84.3-31.8c23.1,20.4,52.8,31.8,84.3,31.8   c23.9,0,47.3-6.8,67.4-19.3c4.2-2.6,8.3-5.5,12.1-8.6C845.3,700.4,846.2,699.6,847.2,698.8z" />
                      <path
                        d="M428,210.1v-0.2c1-64.8,71.5-122.8,74.6-125.3l9.7-7.8l9.5,8c0.8,0.7,19.8,16.9,38.4,39.8c26,32.2,38.1,61.1,35.9,86.2   c-0.4,46-37.9,83.3-84,83.3C465.7,294.1,428,256.4,428,210.1z" />
                    </g>
                  </svg>
                </div>
                <div class="cut cut-short bg-gray-100"></div>
                <label for="age" class="placeholder">Age</>
              </div>
            </div>
          </div>

          <div class="col-span-6 sm:col-span-3">
            <div class="input-group js-input-group">
              <div class="input-container ic1">
                <%= f.number_field :weight_in_kgs, in: 30..220, placeholder: '', value: current_user.weight_in_kgs, required: true, class:"input" %>
                <div class="absolute inset-y-0 right-0 pr-3 pt-2 flex items-center pointer-events-none text-gray-400">
                  <svg class="h-7 w-7 fill-current" fill="none" xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" x="0px" y="0px" viewBox="0 0 100 125"
                    style="enable-background:new 0 0 100 100;" xml:space="preserve">
                    <style type="text/css">
                      .st0 {
                        fill: none;
                        stroke: #9CA3AF;
                        stroke-width: 3;
                        stroke-linecap: round;
                        stroke-miterlimit: 10;
                      }

                      .st1 {
                        fill: none;
                        stroke: #9CA3AF;
                        stroke-width: 3;
                        stroke-linecap: round;
                        stroke-linejoin: round;
                        stroke-miterlimit: 10;
                      }

                      .st2 {
                        fill: none;
                        stroke: #9CA3AF;
                        stroke-width: 2;
                        stroke-linecap: round;
                        stroke-miterlimit: 10;
                      }
                    </style>
                    <path class="st0"
                      d="M78.2,88h-56c-4.1,0-7.4-3.2-7.6-7.2L11.5,20c-0.2-4.4,3.3-8,7.6-8h61.7c4.3,0,7.8,3.6,7.6,8l-2.6,60.7  C85.7,84.8,82.3,88,78.2,88z" />
                    <line class="st0" x1="50" y1="50" x2="50" y2="88" />
                    <path class="st1" d="M71.1,39.6c0-10.6-9.5-19.1-21.1-19.1s-21.1,8.6-21.1,19.1H71.1z" />
                    <line class="st2" x1="54.3" y1="31.1" x2="50" y2="38.9" />
                  </svg>
                </div>
                <div class="cut cut-large bg-gray-100"></div>
                <label for="weight_in_kgs" class="placeholder">Poids en kg</>
              </div>
            </div>
          </div>
        </div>

        <div class="input-group js-input-group">
          <div class="input-container ic1">
            <%= f.number_field :height_in_cms, in: 80..250, placeholder: '', value: current_user.height_in_cms, required: true, class:"input" %>
            <div class="absolute inset-y-0 right-0 pr-3 pt-2 flex items-center pointer-events-none text-gray-400">
              <svg class="h-7 w-7 fill-current" fill="none" xmlns="http://www.w3.org/2000/svg" data-name="Layer 1"
                viewBox="0 0 200 250" x="0px" y="0px">
                <title>Height</title>
                <path
                  d="M54.49,179.64a6.82,6.82,0,0,1-6.83-6.82V36.28a6.83,6.83,0,0,1,13.66,0h0V172.82A6.82,6.82,0,0,1,54.49,179.64Z" />
                <path
                  d="M72.69,38.56H36.28a6.83,6.83,0,0,1,0-13.65H72.69a6.83,6.83,0,1,1,0,13.65Zm0,141.08H36.28a6.83,6.83,0,0,1,0-13.65H72.69a6.83,6.83,0,1,1,0,13.65ZM131.86,70.42a29.59,29.59,0,1,1,29.58-29.58A29.58,29.58,0,0,1,131.86,70.42Zm0-45.51a15.93,15.93,0,1,0,15.93,15.93h0a15.93,15.93,0,0,0-15.93-15.93Z" />
                <path
                  d="M163.72,129.58H100a6.82,6.82,0,0,1-6.83-6.82V86.35a20.53,20.53,0,0,1,20.48-20.48h36.41a20.52,20.52,0,0,1,20.48,20.48v36.41A6.82,6.82,0,0,1,163.72,129.58Zm-56.89-13.65h50.06V86.35a6.83,6.83,0,0,0-6.83-6.83H113.65a6.82,6.82,0,0,0-6.82,6.83Z" />
                <path
                  d="M150.06,188.75H113.65a6.82,6.82,0,0,1-6.82-6.83V122.76a6.82,6.82,0,0,1,6.82-6.83h36.41a6.83,6.83,0,0,1,6.83,6.83v59.16A6.83,6.83,0,0,1,150.06,188.75Zm-29.58-13.66h22.76V129.58H120.48Z" />
              </svg>
            </div>
            <div class="cut cut-large bg-gray-100"></div>
            <label for="height_in_cms" class="placeholder">Taille en cm</>
          </div>
        </div>

        <ul class=" rounded-md -space-y-px mt-8">

          <li>
            <div class=" border rounded-tl-xl rounded-tr-xl p-4 flex flex-col md:pl-4 md:pr-6  bg-white">
              <label class="flex items-center text-sm cursor-pointer">
                <%= f.radio_button(:objective, "1", class:"w-5 h-5")  %>
                <span
                  class="ml-3 font-medium text-gray-900"><%= label_tag(:objective, "Je veux perdre du poids") %></span>
              </label>
            </div>
          </li>
          <li>
            <div class=" border  p-4 flex flex-col md:pl-4 md:pr-6  bg-white">
              <label class="flex items-center text-sm cursor-pointer">
                <%= f.radio_button(:objective, "2", class:"w-5 h-5") %>
                <span
                  class="ml-3 font-medium text-gray-900"><%= label_tag(:objective, "Je veux garder la ligne") %></span>
              </label>
            </div>
          </li>
          <li>
            <div class=" border rounded-bl-xl rounded-br-xl p-4 flex flex-col md:pl-4 md:pr-6  bg-white">
              <label class="flex items-center text-sm cursor-pointer">
                <%= f.radio_button(:objective, "3", class:"w-5 h-5") %>
                <span
                  class="ml-3 font-medium text-gray-900"><%= label_tag(:objective, "Je veux prendre du poids") %></span>
              </label>
            </div>
          </li>
        </ul>

        <div class="mt-8">
          <%= f.select :activity_level, [["J'ai un métier sédentaire et je ne pratique pas de sport", "1"],['Je pratique du sport de 1 à 3 fois par semaine', "2"], ['Je pratique du sport de 3 à 5 fois par semaine', "3"], ['Je pratique du sport presque quotidiennement', "4"], ["J'ai un métier physique et je pratique du sport presque quotidiennement", "5"]], { required: true } , { class:"mt-1 block w-full pl-3 pr-10 py-2 text-sm border-gray-300 rounded-md" } %>
        </div>

        <%= f.submit "Valider", class:"submit" %>

        <% end %>

      </div>
    </div>
  </div>
</div>