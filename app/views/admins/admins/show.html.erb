
<%= render "users/users/welcome"%>
<div class="h-screen flex">
  <%= render "users/users/sidebar"%>

    <!--welcome start-->
  <div class="w-full px-4 sm:px-6 md:px-8 mt-8">
    <h1 class="text-3xl font-semibold text-gray-900 -mb-6"><span class="text-primary-800">Bienvenue</span>
    sur le dashboard admin</h1>
   
      <!--overview cards start-->
    <div class="mt-12">
      <ul class="mt-3 grid grid-cols-1 gap-5 sm:gap-6 sm:grid-cols-2 lg:grid-cols-6">
        <li class="admin-card col-start-2">
          <div
            class="flex-shrink-0 flex items-center justify-center w-16 bg-pink-600 text-white text-sm font-medium rounded-l-md">
            <i class="fas fa-users fa-2x"></i>
          </div>
          <div
            class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md flex-no-wrap">
            <div class="flex-1 px-4 py-2 text-sm flex-no-wrap text-center"> 
              <p class="text-gray-900 font-semibold hover:text-gray-600">Nombre d'utilisateurs</p>                  
              <p class="text-gray-500"><%= User.all.length %></p>
            </div>
          </div>
        </li>

        <li class="admin-card">
          <div
            class="flex-shrink-0 flex items-center justify-center w-16 bg-primary-800 text-white text-sm font-medium rounded-l-md">
            <%= image_tag("recipe.svg", size: "40x40") %>
          </div>
          <div
            class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md flex-no-wrap">
            <div class="flex-1 px-4 py-2 text-sm flex-no-wrap text-center">
              <p class="text-gray-900 font-medium hover:text-gray-600">Nombre de recettes</p>
              <p class="text-gray-500"><%= Recipe.all.length %></p>
            </div>
          </div>
        </li>
        </ul>

          <!--start second row-->
        <ul class="mt-3 grid grid-cols-1 gap-5 sm:gap-6 sm:grid-cols-2 lg:grid-cols-6">
        <li class="admin-card">
          <div
            class="flex-shrink-0 flex items-center justify-center w-16 bg-purple-600 text-white text-sm font-medium rounded-l-md">
            <i class="fas fa-tachometer-alt fa-2x"></i>
          </div>
          <div
            class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md flex-no-wrap">
            <div class="flex-1 px-4 py-2 text-sm flex-no-wrap text-center">
              <p class="text-gray-900 font-medium hover:text-gray-600">Objectif perdre du poids</p>
              <p class="text-gray-500"><%= User.where(objective: 1).length %></p>
            </div>
          </div>
        </li>
        <li class="admin-card">
          <div
            class="flex-shrink-0 flex items-center justify-center w-16 bg-purple-600 text-white text-sm font-medium rounded-l-md">
            <i class="fas fa-tachometer-alt fa-2x"></i>
          </div>
          <div
            class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md flex-no-wrap">
            <div class="flex-1 px-4 py-2 text-sm flex-no-wrap text-center">
              <p class="text-gray-900 font-medium hover:text-gray-600">Objectif garder la ligne</p>
              <p class="text-gray-500"><%= User.where(objective: 2).length %></p>
            </div>
          </div>
        </li>
        <li class="admin-card">
          <div
            class="flex-shrink-0 flex items-center justify-center w-16 bg-purple-600 text-white text-sm font-medium rounded-l-md">
            <i class="fas fa-tachometer-alt fa-2x"></i>
          </div>
          <div
            class="flex-1 flex items-center justify-between border-t border-r border-b border-gray-200 bg-white rounded-r-md flex-no-wrap">
            <div class="flex-1 px-4 py-2 text-sm flex-no-wrap text-center">
              <p class="text-gray-900 font-medium hover:text-gray-600">Objectif prendre du poids</p>
              <p class="text-gray-500"><%= User.where(objective: 3).length %></p>
            </div>
          </div>
        </li>
      </ul>
    </div>
      <!--overview cards end-->
   </div>
</div>